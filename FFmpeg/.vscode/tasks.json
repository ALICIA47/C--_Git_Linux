{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build-ffmpeg",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "${file}",
          "-o", "${fileDirname}/${fileBasenameNoExtension}.exe",
          "-IC:/ffmpeg/include",
          "-LC:/ffmpeg/lib",
          "-lavcodec", "-lavformat", "-lavutil", "-lswscale"
        ],
        "group": { "kind": "build", "isDefault": true },
        "problemMatcher": ["$gcc"]
      }
    ]
  }
  